{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": false,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "rootDir": ".",
      "outDir": "./dist",
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "index.ts"],
    "exclude": ["node_modules", "dist"]
  }
  